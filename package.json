{
  "name": "timestamps",
  "version": "0.4.0",
  "private": true,
  "type": "module",
  "author":"Brian Sokol <bri@nsokol.net>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start -p 7623",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "docker": "npm run docker:volume && npm run docker:build && npm run docker:run",
    "docker:build": "docker build -t timestamps .",
    "docker:run": "docker run -v timestamps_data:/app/sqlite -p 7623:7623 --name timestamps timestamps",
    "docker:volume": "docker volume create timestamps_data",
    "docker:stop": "docker stop timestamps && docker rm timestamps",
    "docker:remove": "npm run docker:stop || docker volume rm timestamps_data"
  },
  "dependencies": {
    "@libsql/client": "0.14.0",
    "@mantine/core": "7.17.1",
    "@mantine/dates": "7.17.1",
    "@mantine/form": "7.17.1",
    "@mantine/hooks": "7.17.1",
    "@tanstack/react-query": "5.67.1",
    "dayjs": "1.11.13",
    "drizzle-orm": "0.40.0",
    "nanoid": "5.1.2",
    "next": "15.2.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "5.5.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.0",
    "@tailwindcss/postcss": "4.0.11",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "22.13.9",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "drizzle-kit": "0.30.5",
    "eslint": "9.21.0",
    "eslint-config-next": "15.2.1",
    "postcss": "8.5.3",
    "postcss-preset-mantine": "1.17.0",
    "postcss-simple-vars": "7.0.1",
    "prettier": "3.5.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "4.0.11",
    "tsx": "4.19.3",
    "typescript": "5.8.2"
  }
}
